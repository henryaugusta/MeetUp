<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:paddingStart="10dp"
    android:layout_height="180dp"
    android:background="@drawable/bg_navdraw"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

  <ImageView
      android:layout_marginTop="10dp"
      android:id="@+id/header_user"
      android:layout_width="80dp"
      android:layout_height="80dp"
      app:srcCompat="@drawable/ic_sample_profile" />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/nav_header_anggota_nama"
      android:textColor="#FFF"
      android:fontFamily="@font/poppins_medium"
      android:paddingTop="@dimen/nav_header_vertical_spacing"
      android:text="Henry Augusta" />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/nav_header_anggota_email"
      android:textColor="#FFF"
      android:fontFamily="@font/poppins_light"
      android:paddingTop="@dimen/nav_header_vertical_spacing"
      android:text="henryaugusta4@gmail.com" />



</LinearLayout>